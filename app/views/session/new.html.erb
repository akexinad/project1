

<!-- form_for is for CRUD, so we won't use that -->

<div class="container">
  <div class="row">
    <div class="col-sm">
    </div>
    <div class="col-sm">
      <h1 class="login-title">Login</h1>

          <% if flash[:error_message].present? %>
            <p><%= flash[:error_message] %></p>
          <% end %>

          <div class="form-group">
            <%= form_tag login_path do %>
            <%= label_tag :email %>
            <%= email_field_tag :email, nil, :class => "form-control" %>
          </div>

          <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, :class => "form-control" %>
          </div>

          <div class="button">
            <%= submit_tag "Sign In", :class => "btn btn-primary" %>
            <% end %>
          </div>

    </div>
    <div class="col-sm">
    </div>
  </div>
</div>
