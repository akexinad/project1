<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav>
        <% if @current_user.present? %>
          <%= link_to "Profile", user_path(@current_user) %>
          |
          <%= link_to "Thinkers", thinkers_path %>
          -
          <%= link_to "Add Thinker", new_thinker_path %>
          |
          <%= link_to "Theories", theories_path %>
          -
          <%= link_to "New Theory", new_theory_path %>
          |
          <%= link_to "Fields", fields_path %>
          -
          <%= link_to "Add Field", new_field_path %>
          |
          <%= link_to "Sign Out #{ @current_user.email }", login_path, :method => 'delete' %>

        <% else %>
          <%= link_to "Sign Up", new_user_path %>
          <%= link_to "Sign In", login_path %>
        <% end %>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
